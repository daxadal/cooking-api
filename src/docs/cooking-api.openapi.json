          }
        ],
        "responses": {
          "200": {
            "description": "A list of the steps that use this utensil.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DetailedStep"
                  }
                }
              }
            }
          },
          "400": {
