          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "id": {
        "name": "id",
        "in": "path",
        "description": "ID to get",
        "required": true,
        "schema": {
          "type": "number"
        }
      },
      "detailed": {
        "name": "detailed",
        "in": "query",
        "description": "If detailed, all the info of the ingredients and utensils is returned. If not, only the ids are returned.",
        "required": false,
        "schema": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "responses": {
      "204": {
        "description": "No content. Operation was performed successfully and no data needs to be returned"
      },
      "400": {
        "description": "Bad request",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "description": "More info about the error"
                }
              }
            }
          }
        }
      },
      "404": {
        "description": "Not found",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "description": "More info about the error"
                }
              }
            }
          }
        }
      },
      "500": {
        "description": "Internal server error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "description": "Generic error message"
                }
              }
            }
          }
        }
      }
    },
    "schemas": {
      "Ingredient": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "start",
              "mid",
              "end"
            ]
          }
        }
      },
      "Recipe": {
        "oneOf": [
          {
            "$ref": "#/components/schemas/SimpleRecipe"
          },
          {
            "$ref": "#/components/schemas/DetailedRecipe"
          }
        ]
      },
      "Step": {
        "oneOf": [
          {
            "$ref": "#/components/schemas/SimpleStep"
          },
          {
            "$ref": "#/components/schemas/DetailedStep"
          }
        ]
      },
      "Utensil": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "waitTimeInMillis": {
            "type": "integer"
          }
        }
      },
      "DetailedRecipe": {
        "type": "object",
        "properties": {
          "steps": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          },
          "input": {
            "$ref": "#/components/schemas/Ingredient"
          },
          "utensil1": {
            "$ref": "#/components/schemas/Utensil"
          },
          "mid1": {
            "$ref": "#/components/schemas/Ingredient"
          },
          "utensil2": {
            "$ref": "#/components/schemas/Utensil"
          },
          "mid2": {
            "$ref": "#/components/schemas/Ingredient"
          },
          "utensil3": {
            "$ref": "#/components/schemas/Utensil"
          },
          "mid3": {
            "$ref": "#/components/schemas/Ingredient"
          },
          "utensil4": {
            "$ref": "#/components/schemas/Utensil"
          },
          "mid4": {
            "$ref": "#/components/schemas/Ingredient"
          },
          "utensil5": {
            "$ref": "#/components/schemas/Utensil"
          },
          "mid5": {
            "$ref": "#/components/schemas/Ingredient"
          },
          "output": {
            "$ref": "#/components/schemas/Ingredient"
          }
        }
      },
      "SimpleRecipe": {
        "type": "object",
        "properties": {
          "steps": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          },
          "input": {
            "type": "integer"
          },
          "utensil1": {
            "type": "integer"
          },
          "mid1": {
            "type": "integer"
          },
          "utensil2": {
            "type": "integer"
          },
          "mid2": {
            "type": "integer"
          },
          "utensil3": {
            "type": "integer"
          },
          "mid3": {
            "type": "integer"
          },
          "utensil4": {
            "type": "integer"
          },
          "mid4": {
            "type": "integer"
          },
          "utensil5": {
            "type": "integer"
          },
          "mid5": {
            "type": "integer"
          },
          "output": {
            "type": "integer"
          }
        }
      },
      "DetailedStep": {
        "type": "object",
        "properties": {
          "input": {
            "$ref": "#/components/schemas/Ingredient"
          },
          "utensil": {
            "$ref": "#/components/schemas/Utensil"
          },
          "output": {
            "$ref": "#/components/schemas/Ingredient"
          }
        }
      },
      "SimpleStep": {
        "type": "object",
        "properties": {
          "input": {
            "type": "integer"
          },
          "utensil": {
            "type": "integer"
          },
          "output": {
            "type": "integer"
          }
        }
      },
      "IngredientData": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "start",
              "mid",
              "end"
            ]
          }
        }
      },
      "UtensilData": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "waitTimeInMillis": {
            "type": "integer"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "ingredients",
      "description": "Methods to manage ingredients and its uses"
    },
    {
      "name": "recipes",
      "description": "Methods to query recipes"
    },
    {
      "name": "steps",
      "description": "Methods to query recipe steps"
    },
    {
      "name": "utensils",
      "description": "Methods to manage utensils and its uses"
    }
  ]
}